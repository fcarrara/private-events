<h1><%= @user.name %></h1>
<div class="panel-container col-md-6 col-md-offset-3">
  <p>Events created (<%= @user.created_events.count %>)</p>
  <ul class="user">
    <% @user.created_events.each do |event| %>
      <%= render 'users/event', event: event %>
    <% end %>
  </ul>
  <p>Events attended (<%= @user.attended_events.count %>) </p>
  <ul class="user">
    <% @user.attended_events.each do |event| %>
      <%= render 'users/event', event: event %>
    <% end %>
  </ul>
</div>
