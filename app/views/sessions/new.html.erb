<h1>Log in</h1>

<div class="row">
  <div class="panel-container col-md-4 col-md-offset-4">
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.submit "Log in", class: "btn btn-primary btn-wide" %>
    <% end %>

    <p class="new-user">New user? <%= link_to "Sign up now!", signup_path %></p>
  </div>
</div>